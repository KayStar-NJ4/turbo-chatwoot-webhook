{
  "name": "turbo-chatwoot-webhook",
  "version": "3.0.0",
  "description": "Webhook trung gian kết nối các platform với Chatwoot và Dify AI",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/ scripts/ --ext .js",
    "lint:fix": "eslint src/ scripts/ --ext .js --fix",
    "build": "echo 'No build step required for Node.js'",
    "docker:build": "docker build -t turbo-chatwoot-webhook .",
    "docker:run": "docker run -p 3000:3000 --env-file .env turbo-chatwoot-webhook",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose up --build -d",
    "setup": "node scripts/setup/dev.js",
    "setup:db": "node scripts/setup/database.js",
    "setup:config": "node scripts/setup/database.js config",
    "migrate": "node scripts/run-migration.js",
    "migrate:status": "node scripts/migrate.js status",
    "create-super-admin": "node scripts/create-super-admin.js",
    "test:config": "node scripts/tests/test-configuration.js",
    "test:webhook": "node scripts/tests/test-webhook.js",
    "test:all": "npm run test:config && npm run test:webhook",
    "setup-telegram": "node scripts/setup-telegram.js",
    "setup-local": "node scripts/setup-local.js",
    "test-integration": "node scripts/test-integration.js",
    "test-improvements": "node scripts/test-improvements.js",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log"
  },
  "packageManager": "yarn@1.22.19",
  "keywords": [
    "webhook",
    "chatwoot",
    "telegram",
    "dify",
    "chatbot"
  ],
  "author": "ThuanPT",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
