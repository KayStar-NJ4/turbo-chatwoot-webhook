# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRY=24h

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://your-domain.com
# For local development, use ngrok or similar tunneling service
# Example: TELEGRAM_WEBHOOK_URL=https://abc123.ngrok.io/webhook/telegram

# Chatwoot Configuration
CHATWOOT_BASE_URL=https://your-chatwoot-instance.com
CHATWOOT_ACCESS_TOKEN=your_chatwoot_access_token
CHATWOOT_ACCOUNT_ID=your_account_id
CHATWOOT_INBOX_ID=1

# Dify AI Configuration
DIFY_API_URL=https://api.dify.ai/v1
DIFY_API_KEY=your_dify_api_key
DIFY_APP_ID=your_dify_app_id

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chatwoot_webhook
DB_USER=postgres
DB_PASSWORD=your_password
DB_SSL=false
# Or use connection string: DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Note: Only PostgreSQL is supported. Redis and MongoDB support has been removed.

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS Configuration
ALLOWED_ORIGINS=https://your-chatwoot-instance.com,https://your-domain.com

# Admin API Key (optional)
ADMIN_API_KEY=your_admin_api_key
